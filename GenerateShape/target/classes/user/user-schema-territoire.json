{
        "type": "object",
        "required": [
           "firstname",
           "lastname",
           "email"
        ],
        "properties": {
           "id": {
              "type": "integer",
              "format": "int64",
              "description": "Unique identifiant for user"
           },
           "firstname": {
              "type": "string",
              "description": "User firstname",
              "example": "Bob"
           },
           "lastname": {
              "type": "string",
              "description": "User lastname",
              "example": "Marley"
           },
           "email": {
              "type": "string",
              "description": "User email used during authentification process",
              "example": "bob.marley@emse.fr"
           },
           "phone": {
              "type": "string",
              "description": "User phone",
              "example": "+33612345678"
           },
           "institution": {
              "type": "string",
              "description": "User institution",
              "default": "Mines Saint-Etienne",
              "example": "Mines Saint-Etienne"
           }
        }
     }